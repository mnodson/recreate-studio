rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Contact Messages Collection
    // - Anyone can create (for contact form submissions)
    // - Only authenticated users can read, update, or delete
    match /contact-messages/{messageId} {
      // Allow anyone to create new contact messages (for contact form)
      allow create: if true;

      // Only authenticated users can read, update, or delete
      allow read, update, delete: if request.auth != null;
    }

    // Personal Galleries Collection
    // - Authenticated users have full access
    // - Anonymous users can read shared galleries with valid share tokens
    match /personal-galleries/{galleryId} {
      // Authenticated users have full access
      allow read, write: if request.auth != null;

      // Anonymous users can access galleries with valid, non-expired share tokens
      // This allows shared gallery links to work for unauthenticated users
      allow get, list: if resource.data.shareToken != null
                       && resource.data.shareToken != ''
                       && (!('shareExpiresAt' in resource.data)
                           || resource.data.shareExpiresAt == null
                           || resource.data.shareExpiresAt > request.time);
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
